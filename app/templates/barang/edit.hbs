<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

<form>
    <div class="form-group">
        <label for=""> nama barang :</label>
        {{!-- {{#each model.barang as |item|}} --}}
      
        {{input  class="form-control" value=model.nama_barang required=true}}
        
            
{{!--            
        {{/each}}  --}}
        
         
        
    </div>
    <div class="form-group">
        <label for=""> departemen :</label> 
            <select class="form-control" onchange={{action "selecteddep" value="target.value"}}>
                {{#each departemens as |dep|}}
                    <option selected hidden>---</option>
                    <option value="{{dep.nama_departemen}}">{{ dep.nama_departemen}}</option>
                      
                {{/each}}
            </select>    
        {{!-- {{input class="form-control" value=model.nama_departemen required=true}} --}}
    </div>
    <div class="form-group">
        <label for=""> kategori :</label> 
        <select class="form-control" onchange={{action "selectedkat" value="target.value"}}>
            {{#each kategoris as |kat|}}
                <option selected hidden>---</option>
                <option value="{{kat.nama_kategori}}">{{ kat.nama_kategori}}</option>
               
            {{/each}}
        </select>     
        {{!-- {{input class="form-control" value=model.nama_kategori required=true}} --}}
    </div>
    
    <button class="btn btn-warning" type="submit" {{action 'updateBarang' model.id}} >Update</button>
    <button class="btn btn-danger" {{action 'cancel'}} >cancel</button>
</form>




